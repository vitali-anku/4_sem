<Page x:Class="PO_V.Button"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PO_V"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Button">

    <Grid>
        <TextBox x:Name="textBox" FontSize="20" HorizontalAlignment="Left" Height="70" Margin="285,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250">
            <TextBox.ToolTip>
                <StackPanel>
                    <TextBlock FontSize="10" Foreground="Red">Всем привет, я подсказка!</TextBlock>
                </StackPanel>
            </TextBox.ToolTip>
        </TextBox>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="225,245,0,0" VerticalAlignment="Top" Width="75" Click="escbutton_Click "  />
        <Button Content="Button" HorizontalAlignment="Left" Margin="225,245,0,0" VerticalAlignment="Top" Width="75" Click="escbutton_Click " />
    </Grid>
</Page>
