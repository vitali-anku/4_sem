<Page x:Class="PO_V.Sign_in"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PO_V"
      mc:Ignorable="d"
      Title="Sign_in" Width="320" Height="320">

    <Grid>
        <Label x:Name="label" Content="Введите логин:" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Height="26" Width="100" RenderTransformOrigin="0.5,0.476"/>
        <Label x:Name="label1" Content="Введите пароль:" HorizontalAlignment="Left" Margin="10,142,0,0" VerticalAlignment="Top" Height="26" Width="100"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" TextAlignment="Left"  Height="21" Margin="115,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"/>
        <PasswordBox Name="passwordBox1" PasswordChar="*" HorizontalAlignment="Left" Margin="115,147,0,0" Height="21" VerticalAlignment="Top" Width="165"/>
        <Button x:Name="button" Content="Войти" HorizontalAlignment="Left" Margin="120,240,0,0" VerticalAlignment="Top" Width="80" Click="button_Click"/>
        <Label x:Name="label2" Foreground="Red" HorizontalAlignment="Left" Margin="40,260,0,0" VerticalAlignment="Top" Width="240" Height="25"/>

    </Grid>
</Page>
