<Page x:Class="PO_V.Prib"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PO_V"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Prib">

    <Grid>
        <Button x:Name="button" Content="Отправление" HorizontalAlignment="Left" Margin="45,120,0,0" VerticalAlignment="Top" Width="140" Click="button_Click"/>
        <Button x:Name="button1" Content="Прибытие" HorizontalAlignment="Left" Margin="45,295,0,0" VerticalAlignment="Top" Width="140" Click="button1_Click"/>
        <DataGrid x:Name="dataGrid"  RowHeaderWidth="0" BorderThickness="0"  IsReadOnly="True" GridLinesVisibility="None"  Background="White" ColumnWidth="Auto"
            RowHeight="25" FontFamily="Yu Gothic UI Semilight" FontSize="15" HorizontalAlignment="Left" Margin="210,10,0,0" VerticalAlignment="Top"
            Height="470" Width="405" Opacity="1" />
        <Button x:Name="button2" Content="Назад" HorizontalAlignment="Left" Margin="60,10,0,0" VerticalAlignment="Top" Width="75" Click="button2_Click"/>
    </Grid>
</Page>
