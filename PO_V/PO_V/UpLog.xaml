<Window x:Class="PO_V.UpLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PO_V"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="UpLog" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="80,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120">
            <TextBox.ToolTip>
                <StackPanel>
                    <TextBlock FontSize="10" Foreground="Red">Поле должно было заполнено</TextBlock>
                </StackPanel>
            </TextBox.ToolTip>
        </TextBox>
        <Button x:Name="button" Content="Изменить" HorizontalAlignment="Left" Margin="105,160,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="button1" Content="Закрыть окно" HorizontalAlignment="Left" Margin="80,200,0,0" VerticalAlignment="Top" Width="120" Click="button1_Click"/>
        <Label x:Name="label" Width="Auto" Height="Auto" HorizontalAlignment="Left" Margin="92,129,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
