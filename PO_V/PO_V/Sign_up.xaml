<Page x:Class="PO_V.Sign_up"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PO_V"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Sign_up">
    <Grid>
        <Label x:Name="label2" Content="login:" HorizontalAlignment="Left" FontSize="20" Margin="355,124,0,0" VerticalAlignment="Top" Height="40" Width="59"/>
        <TextBox x:Name="Log" HorizontalAlignment="Left" Height="26" Margin="414,134,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="166"/>
        <Label x:Name="label1" FontSize="20" Content="name:" HorizontalAlignment="Left" Margin="349,165,0,0" VerticalAlignment="Top" Height="35" Width="65"/>
        <TextBox x:Name="Nam" HorizontalAlignment="Left" Height="20" Margin="414,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <Label x:Name="label5" FontSize="20" Content="password:" HorizontalAlignment="Left" Margin="316,205,0,0" VerticalAlignment="Top" Height="35"/>
        <PasswordBox Name="passwordBox" PasswordChar="*" HorizontalAlignment="Left" Margin="414,215,0,0" Height="21" VerticalAlignment="Top" Width="166"/>
        <Button x:Name="button" FontSize="20" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="320,375,0,0" VerticalAlignment="Top" Width="240" Height="40" RenderTransformOrigin="0.222,0" Click="button_Click"/>
        <Label x:Name="lg" Foreground="Red" FontSize="10" HorizontalAlignment="Left" Margin="414,155,0,0" VerticalAlignment="Top" Height="Auto" Width="Auto"/>
        <Button x:Name="button1" FontSize="20"  Content="Вернуться в главное меню" HorizontalAlignment="Left" Margin="280,435,0,0" VerticalAlignment="Top" Width="320" RenderTransformOrigin="-0.387,-2.25" Height="40" Click="button1_Click"/>
    </Grid>
</Page>
